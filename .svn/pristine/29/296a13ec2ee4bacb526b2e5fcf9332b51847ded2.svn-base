public class OfflineSubscribeTest extends BaseTestCase{
	 
	 @BeforeClass
		public static void init() throws Exception{
			dataSetVipfashion.initDataSet("src/test/resources/data/vlife/offlineSubscribe_data.xml");
			CommonMethod.getUidAndToken();
		}
	
	@Test
	public void testOfflineSubscribeAtion_right() throws NoSuchAlgorithmException{
		System.out.println("到店预约单更新接口");
		String sign = MD5Encoder.encodeByMD5("offline" + "subscribe" + "viplux#123@", MessageDigest.getInstance("MD5"));
		given().
			formParams("sign", sign).
			formParams("appid", CommonMethod.appid).
			formParams("cart_ids", "1").
			formParams("username", "viptest007@vip.com").
			formParams("phone", "13100100100").
			formParams("uid", CommonMethod.uid).
			formParams("subscribe_time", "2014-06-11").
			formParams("token", CommonMethod.token).
		when().
			post(CommonMethod.vlife_uri+"/offline/subscribe/").
		then().
			statusCode(200).
			body("code", equalTo(1)).
			body("data", equalTo("操作成功!"));
	}
	
	@Test
	@Source("data/vlife/offline_subscribe_error.csv")
	public void testOfflineSubscribeAtion_error(String testName, String cart_ids, String userName, String phone, String uid, int code, String msg﻿) throws NoSuchAlgorithmException{
		System.out.println(testName);
		String sign = MD5Encoder.encodeByMD5("offline" + "subscribe" + "viplux#123@", MessageDigest.getInstance("MD5"));
		given().
			formParams("sign", sign).
			formParams("appid", CommonMethod.appid).
			formParams("cart_ids", cart_ids).
			formParams("username", userName).
			formParams("phone", phone).
			formParams("uid", uid).
			formParams("subscribe_time", GetDate.getDate(1)).
			formParams("token", CommonMethod.token).
		when().
			post(CommonMethod.vlife_uri+"/offline/subscribe/").
		then().
			statusCode(200).
			body("code", equalTo(code)).
			body("msg", equalTo(msg﻿));
	}
	
	@AfterClass
	public static void afterClass() throws SQLException{
//		JDBCTemplateFactory.VIPLUX_TEST.execute("delete from user_subscribe where cart_id = '1';");
		JDBCTemplateFactory.VIPLUX_TEST.execute("delete from user_subscribe where cart_id between '1' and '15';");
		JDBCTemplateFactory.VIPLUX_TEST.getDataSource().getConnection().close();
	}
}
