package com.vip.apitest.luxury.vlife;

import static com.jayway.restassured.RestAssured.given;
import static com.jayway.restassured.module.jsv.JsonSchemaValidator.matchesJsonSchema;
import static org.hamcrest.Matchers.equalTo;

import java.io.InputStream;
import java.security.MessageDigest;
import java.security.NoSuchAlgorithmException;

import org.databene.benerator.anno.Source;
import org.junit.FixMethodOrder;
import org.junit.Test;
import org.junit.runners.MethodSorters;

import com.vip.apitest.luxury.BaseTestCase;
import com.vip.apitest.luxury.common.CommonMethod;
import com.vip.apitest.utility.MD5Encoder;

@FixMethodOrder(MethodSorters.NAME_ASCENDING)
public class BrandShowTest extends BaseTestCase{
	
	@Test
	public void testBrandShowAtion_right() throws NoSuchAlgorithmException{
		System.out.println("获得品牌列表的接口");
		InputStream jsonschema = Thread.currentThread().getContextClassLoader().getResourceAsStream("json/brand_show.json");
		String sign = MD5Encoder.encodeByMD5("brand" + "show" + "viplux#123@", MessageDigest.getInstance("MD5"));
		given().
			params("sign", sign).
			params("appid", CommonMethod.appid).
			params("page", "1").
			params("pagesize", "100").
		when().
			get(CommonMethod.vlife_uri+"/brand/show/").
		then().
			statusCode(200).
			body("code", equalTo(1)).
			body(matchesJsonSchema(jsonschema));
	}
	
	@Test
	@Source("data/vlife/brand_show_error.csv")
	public void testBrandShowAtion_error(String testName, String page, String pageSize, int code, String msg) throws NoSuchAlgorithmException{
		System.out.println(testName);
		String sign = MD5Encoder.encodeByMD5("brand" + "show" + "viplux#123@", MessageDigest.getInstance("MD5"));
		given().
			params("sign", sign).
			params("appid", CommonMethod.appid).
			params("page", page).
			params("pagesize", pageSize).
		when().
			get(CommonMethod.vlife_uri+"/brand/show/").
		then().
			statusCode(200).
			body("code", equalTo(code)).
			body("msg", equalTo(msg));
	}
}
