package com.vip.apitest.luxury.vlife;

import static com.jayway.restassured.RestAssured.given;
import static com.jayway.restassured.module.jsv.JsonSchemaValidator.matchesJsonSchema;
import static org.hamcrest.Matchers.equalTo;

import java.io.InputStream;
import java.security.MessageDigest;
import java.security.NoSuchAlgorithmException;

import org.databene.benerator.anno.Source;
import org.junit.BeforeClass;
import org.junit.Test;

import com.vip.apitest.luxury.BaseTestCase;
import com.vip.apitest.luxury.common.CommonMethod;
import com.vip.apitest.utility.MD5Encoder;

public class OfflineShopListTest extends BaseTestCase{
	 
	 @BeforeClass
		public static void init(){
			dataSetVipfashion.initDataSet("src/test/resources/data/vlife/offlineShopList_data.xml");
		}
	
	@Test
	public void testOfflineShopListAtion_right() throws NoSuchAlgorithmException{
		System.out.println("专卖店接口");
		InputStream jsonSchema = Thread.currentThread().getContextClassLoader().getResourceAsStream("json/offline_shoplist.json");
		String sign = MD5Encoder.encodeByMD5("offline" + "shoplist" + "viplux#123@", MessageDigest.getInstance("MD5"));
		given().
			params("sign", sign).
			params("appid", CommonMethod.appid).
			params("city_id", "1").
			params("brand_id", "1001").
		when().
			get(CommonMethod.vlife_uri+"/offline/shoplist/").
		then().
			statusCode(200).
			body("code", equalTo(1)).
			body(matchesJsonSchema(jsonSchema));
	}
	
	@Test
	@Source("data/vlife/offline_shoplist_error.csv")
	public void testOfflineShopListAtion_error(String testName, String city_id, String brand_id, int code, String msg) throws NoSuchAlgorithmException{
		System.out.println(testName);
		String sign = MD5Encoder.encodeByMD5("offline" + "shoplist" + "viplux#123@", MessageDigest.getInstance("MD5"));
		given().
			params("sign", sign).
			params("appid", CommonMethod.appid).
			params("city_id", city_id).
			params("brand_id", brand_id).
		when().
			get(CommonMethod.vlife_uri+"/offline/shoplist/").
		then().
			statusCode(200).
			body("code", equalTo(code)).
			body("msg", equalTo(msg));
	}
}
